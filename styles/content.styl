@import '_variables';

.markdown-body {
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    position: relative;
    padding-left: 1.625rem;
    margin-left: -1.625rem;

    .header-anchor {
      position: absolute;
      display: flex;
      align-items: center;
      height: 100%;
      opacity: 0;
      font-weight: 400;
      font-size: 1.25rem;
      transition: all 0.3s ease-in-out;
    }

    &:hover {
      .header-anchor {
        opacity: 1;
        transform: translateX(-1.625rem);
      }
    }
  }

  & > .content__default {
    & > h1,
    & > h2,
    & > h3,
    & > h4,
    & > h5,
    & > h6 {
      margin-top: 1rem;
    }
  }

  h1 {
    font-size: 48px;
  }

  p {
    margin-bottom: 1.5rem;
    font-size: 16px;
    line-height: 1.6;
    color: $primary;
  }

  a {
    font-weight: 700;

    &:hover {
      text-decoration: underline;
    }
  }

  li {
    line-height: 26px;
  }

  img {
    width: 100%;
  }

  div,
  p {
    hyphens: auto;
    // word-break: break-all;

    & > code {
      padding: 4px 8px;
      border-radius: 4px;
      background-color: #f5f5f5;
    }
  }

  pre {
    padding: 1.5rem;
    font-size: 0;
    overflow: auto;
    border-radius: 4px;
    background-color: #f5f5f5;

    * {
      font-size: 14px;
      line-height: 22px;
    }

    code {
      font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',
        monospace;
    }
  }

  details {
    padding-left: 1.5rem;
    margin-bottom: 2rem;

    summary {
      position: relative;
      font-size: 20px;
      font-weight: 500;
      outline: none;
      user-select: none;
      cursor: pointer;

      &::-webkit-details-marker {
        display: none;
      }

      &::before {
        position: absolute;
        margin-left: -1.5rem;
        margin-top: 2px;
        display: block;
        width: 16px;
        height: 16px;
        content: "";
        background: url("data:image/svg+xml;base64,") 0 0 / 100% 100% no-repeat;
        transition: transform .3s ease-in-out;
      }
    }

    &[open] {
      summary {
        &::before {
          transform: rotateZ(90deg);
        }
      }
    }

    p {
      font-size: 14px;
      color: $secondary;
    }
  }

  .alert {
    padding: 0.5rem 1.5rem;
    margin-bottom: 1rem;
    overflow: hidden;
    border-left: 0.375rem solid $primary;
    background-color: #f5f5f5;

    &--info {
      border-left-color: $info;
    }

    &--tip,
    &--tips {
      border-left-color: $primary;
    }

    &--success {
      border-left-color: $success;
    }

    &--warn,
    &--warning {
      border-left-color: $warning;
    }

    &--danger,
    &--error {
      border-left-color: $danger;
    }

    p {
      margin: 1rem 0;
    }
  }
}
